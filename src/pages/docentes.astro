---
import Layout from '../layouts/Layout.astro';
import Docente from '../components/docentes-componentes/docente.astro';

const title = "Docentes"
---

<Layout title={title}>
    <div class="bg-sky-300">
		<div class="bg-white p-12 sm:px-20">
			<div class="text-center">
				<h1 class="text-5xl tracking-tight font-extrabold text-gray-800 sm:text-5xl">
					<span class="block xl:inline">Conoce a nuestros <span class="text-sky-300">docentes</span></span>
				</h1>
			</div>

			<div class="flex flex-col mt-12">

				<div class="flex flex-col">
					<div class="text-center m-12">
						<h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-3xl">Departamento de salud</h2>
					</div>
					<ul role="list" class="grid gap-x-8 gap-y-12 sm:gap-y-16 xl:col-span-2">
						<li class="flex flex-wrap gap-5 justify-center">
							<Docente foto = "/nosotros/personas1.png" nombre = "Carlos Burgos" cargo = "Enfermero" descripcion = "Especialista en Tecnologías de la Información y las Comunicaciones para la Enseñanza (C) Master Seguridad Clínica del Paciente y Atención con Calidad."/>
							<Docente foto = "/nosotros/personas1.png" nombre = "Jessica Jimenez" cargo = "Enfermera" descripcion = "(C) Especialista en Pedagogía y Educación. Coordinadora de Prácticas clínicas "/>
							<Docente foto = "/nosotros/personas1.png" nombre = "Jesus Morelo" cargo = "Quimico Farmaceutico" descripcion = "(C) Especialista en Pedagogía y Educación. Coordinador de Investigación "/>
							<Docente foto = "/nosotros/personas1.png" nombre = "Juana Barrios" cargo = "Enfermera" descripcion = "Especialista en Administración en los Servicios de Salud"/>
							<Docente foto = "/nosotros/personas1.png" nombre = "Cenith Cabarcas" cargo = "Enfermera" descripcion = "Magister en Gerencia de los servicios de salud con Énfasis del cuidado materno Infantil "/>
							<Docente foto = "/nosotros/personas1.png" nombre = "Ana Coavas" cargo = "Enfermera" descripcion = "(C) Doctora en Educación"/>
						</li>
					</ul>
				</div>

				<div class="flex flex-col">
						<div class="text-center m-12">
							<h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-3xl">Departamento administrativo y jurídico</h2>
						</div>
						<ul role="list" class="grid gap-x-8 gap-y-12 sm:gap-y-16 xl:col-span-2">
							<li class="flex flex-wrap gap-5 justify-center">
								<Docente foto ="/nosotros/personas1.png" nombre = "Angelica Charris" cargo = "Asistente administrativo" descripcion = ""/>
								<Docente foto ="/nosotros/personas1.png" nombre = "Yusdanys Barranco" cargo = "Abogada" descripcion = "Especialista en Derecho Administrativo y Contratación Estatal "/>
							</li>
						</ul>
				</div>

				<div class="flex flex-col">
					<div class="text-center m-12">
						<h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-3xl">Departamento administrativo y jurídico</h2>
					</div>
					<ul role="list" class="grid gap-x-8 gap-y-12 sm:gap-y-16 xl:col-span-2">
						<li class="flex flex-wrap gap-5 justify-center">
							<Docente foto ="/nosotros/personas1.png" nombre = "Jorge Vergara" cargo = "Licenciado en Biología y Química " descripcion = "Esp. en Aplicación de TIC para la enseñanza (C) Magister en Tecnologías Digitales Aplicadas a la Educación  "/>
							<Docente foto ="/nosotros/personas1.png" nombre = "Alexandra Gutierrez" cargo = "Licenciada en Lengua Castellana " descripcion = "(C) Doctora en Educación  "/>
						</li>
					</ul>
			
				</div>

			</div>


		  </div>
    </div>
