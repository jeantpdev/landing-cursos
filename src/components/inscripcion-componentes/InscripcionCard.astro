---
const {titulo, link, textoBoton} = Astro.props
---
<div class="py-3 px-5 w-full rounded-lg sm:w-[500px] shadow-md border-l-8 border-indigo-500">
    <div>
        <a href={link}><p class="text-gray-500 font-medium">{titulo}</p></a>
    </div>
    <div class="flex justify-between">
        <h1 class="text-indigo-400 font-semibold text-xl leading-loose"><a href={link} target="_blank">{textoBoton}</a></h1>
        <a href={link}><img class="h-5" src="/flecha-derecha.svg" alt=""></a>
    </div>
</div>